<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:gravity="center"
  
    android:orientation="vertical" >

    <TextView
        android:layout_margin="10dip"
        android:id="@+id/org.xiangbalao.multicolor_section_textview_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#667788"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/org.xiangbalao.multicolor_section_textview_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org.xiangbalao.multicolor_section_textview_textview1"
        android:text="TextView"
         android:layout_margin="10dip"
         />

    <TextView
        android:id="@+id/org.xiangbalao.multicolor_section_textview_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/org.xiangbalao.multicolor_section_textview_textview1"
        android:text="TextView" 
         android:layout_margin="10dip"
        />

</LinearLayout>